Config { font = "-*-terminus-*-*-*-*-12-*-*-*-*-*-*-u"
       , bgColor = "#000000"
       , fgColor = "#00dd00"
       , position = Top
       , lowerOnStart = True
       , commands = [ Run Cpu ["-t","C: <total>","-L","3","-H","50","--normal","#429942","--high","#A36666"] 10
                    , Run Memory ["-t","M: <used>/<total>"] 10
                    , Run Date "%a %b %_d %Y %H:%M:%S" "date" 10
                    , Run CoreTemp ["-t", "T: <core0>|<core1>C"] 10
                    , Run Battery ["-t","B: <left>","-L","3","-H","95","--normal","#429942","--low","#FF1111","--high","#66A366"] 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader%}{%coretemp% | %cpu% | %memory% | %battery% | %date%"
       }

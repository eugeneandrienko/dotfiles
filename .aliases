# vi like exiting
alias :q='exit'
alias :Q='exit'

# colorized commands
alias ls='ls --color -Fh'
alias grep='grep --color=auto'

# for comfortable system using
alias rm='rm -v'
alias ..='cd ..'
alias ~='cd $HOME'
alias free='free -m'
alias du='du -hs'
alias bk='cd "$OLDPWD"'
alias ll='ls -l --color -Fh'
alias mplayer='mplayer -msglevel all=0 -msgcolor -nojoystick -nolirc -vo xv -ao alsa -subcp cp1251'
alias ps='ps --headers -eo pid,uid,pcpu,pmem,rss,cmd'
alias less='less -R' # to display some ESC-symbols as colors
alias pingya='ping -c3 ya.ru'
alias s='sudo'
alias ss='sudo -s'
alias wget='wget -c'
alias man='LC_ALL=C man' # i hate Russian manpages!
alias feh='feh --scale'
alias panic='kill -9 $$'
alias wicd='wicd-curses'

# mount aliases
alias mount_vfat='sudo mount -o utf8=yes'

# vi like exiting
alias :q='exit'
alias :Q='exit'

# colorized commands
alias ls='ls -G -Fh'
alias grep='grep --color=auto'

# for comfortable system using
alias rm='rm -v'
alias ..='cd ..'
alias ~='cd $HOME'
alias du='du -hs'
alias bk='cd "$OLDPWD"'
alias ll='ls -l -G -Fh'
alias mplayer='mplayer -msglevel all=0 -msgcolor -nojoystick -nolirc -vo xv -ao alsa -subcp cp1251'
alias ps='ps --headers -eo pid,uid,pcpu,pmem,rss,cmd'
alias pingya='ping -c3 ya.ru'
alias s='sudo'
alias ss='sudo -s'
alias wget='wget -c'
alias feh='feh --scale'
alias panic='kill -9 $$'

# mount aliases
alias mount_vfat='sudo mount -t msdosfs'

! Call xrdb ~/.urxvt to apply.
!-----------------------------------------------------------------
Xft.antialias: true
XftG.dpi:        96
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight



!-----------------------------------------------------------------
URxvt*termName: rxvt-256color
URxvt*xftAntialias: true

! black
URxvt*color0: #000000
URxvt*color8: #000000

! red
URxvt*color1: #cc0000
URxvt*color9: #ff0000

! green
URxvt*color2: #00cc00
URxvt*color10: #00ff00

! yellow
URxvt*color3: #cccc00
URxvt*color11: #ffff00

! blue
URxvt*color4: #0000cc
URxvt*color12: #0000ff

! magenta
URxvt*color5: #cc00cc
URxvt*color13: #ff00ff

! cyan
URxvt*color6: #00cccc
URxvt*color14: #00ffff

! white
URxvt*color7: #ffffff
URxvt*color15: #ffffff


URxvt*background: #ffffff
URxvt*foreground: #000000
URxvt*cursorColor: #000000
URxvt*colorUL: #4682B4
URxvt*underlineColor: #dfaf8f


!transparent background
URxvt.transparent: false
URxvt.depth: 32

URxvt.font: xft:Droid Sans Mono:pixelsize=16:antialias=true

URxvt.scrollBar: false
URxvt.saveLines: 1000
URxvt.cursorBlink: true
URxvt.perl-ext-common: default,selection,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/local/bin/firefox
URxvt.url-select.underline: true
! left mouse button click to go to link
URxvt.matcher.button: 1

URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    0
URxvt.tabbed.tab-bg:    2

! set urgent status when something (ex. mcabber) uses system bell
URxvt.urgentOnBell: true

! this is here for vi mode (http://www.jukie.net/bart/blog/20040326082602)
URxvt*eightBitInput : false

URxvt*loginShell: true


! Call xrdb ~/.urxvt to apply.
!-----------------------------------------------------------------
Xft.antialias: true
XftG.dpi:        96
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight



!-----------------------------------------------------------------
URxvt*termName: rxvt-256color
URxvt*xftAntialias: true

! black
URxvt*color0: #000000
URxvt*color8: #000000

! red
URxvt*color1: #cc9393
URxvt*color9: #dca3a3

! green
URxvt*color2: #3f9f3f
URxvt*color10: #bfebbf

! yellow
URxvt*color3: #d0bf8f
URxvt*color11: #f0dfaf

! blue
URxvt*color4: #6ca0a3
URxvt*color12: #8cd0d3

! magenta
URxvt*color5: #dc8cc3
URxvt*color13: #dc8cc3

! cyan
URxvt*color6: #93e0e3
URxvt*color14: #93e0e3

! white
URxvt*color7: #dcdccc
URxvt*color15: #ffffff


URxvt*background: #000000
URxvt*foreground: #aaaaaa
URxvt*cursorColor: #00dd00
URxvt*colorUL: #4682B4
URxvt*underlineColor: #dfaf8f


!transparent background
URxvt.transparent: false
URxvt.depth: 32

URxvt.font: xft:Droid Sans Mono:pixelsize=16:antialias=true

URxvt.scrollBar: false
URxvt.saveLines: 1000
URxvt.cursorBlink: true
URxvt.perl-ext-common: default,selection,url-select
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.url-select.launcher: /usr/bin/google-chrome-stable
URxvt.url-select.underline: true
! left mouse button click to go to link
URxvt.matcher.button: 1

URxvt.tabbed.tabbar-fg: 2
URxvt.tabbed.tabbar-bg: 0
URxvt.tabbed.tab-fg:    0
URxvt.tabbed.tab-bg:    2

! set urgent status when something (ex. mcabber) uses system bell
URxvt.urgentOnBell: true

! this is here for vi mode (http://www.jukie.net/bart/blog/20040326082602)
URxvt*eightBitInput : false

URxvt*loginShell: true


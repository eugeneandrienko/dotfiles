! Call xrdb ~/.urxvt to apply.
!-----------------------------------------------------------------
Xft.antialias: true
XftG.dpi:        96
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight



!-----------------------------------------------------------------
URxvt*termName: rxvt-256color
URxvt*xftAntialias: true

! black
URxvt*color0: #000000
URxvt*color8: #000000

! red
URxvt*color1: #cc0000
URxvt*color9: #ff0000

! green
URxvt*color2: #00aa00
URxvt*color10: #00cc00

! yellow
URxvt*color3: #999900
URxvt*color11: #cccc00

! blue
URxvt*color4: #0000cc
URxvt*color12: #0000ff

! magenta
URxvt*color5: #cc00cc
URxvt*color13: #ff00ff

! cyan
URxvt*color6: #009999
URxvt*color14: #00cccc

! white
URxvt*color7: #ffffff
URxvt*color15: #ffffff


URxvt*background: #ffffff
URxvt*foreground: #000000
URxvt*cursorColor: #000000
URxvt*colorUL: #4682B4
URxvt*underlineColor: #dfaf8f


!transparent background
URxvt.transparent: false
URxvt.depth: 24

URxvt.iso14755:             false
URxvt.iso14755_52:          false

URxvt.font: xft:Noto Sans Mono:pixelsize=16:antialias=true:autohint=true
URxvt.boldFont: xft:Noto Sans Mono-Bold:pixelsize=16:antialias=true:autohint=true
URxvt.letterSpace: -1
URxvt.lineSpace: 0

URxvt.scrollBar: false
URxvt.saveLines: 1000
URxvt.cursorBlink: true

! set urgent status when something (ex. mcabber) uses system bell
URxvt.urgentOnBell: true

! disable scrolling in urxvt itself
URxvt.secondaryScreen: 0
URxvt.secondaryScroll: 0
URxvt*secondaryWheel: false

URxvt*loginShell: true

! hide mouse pointer
URxvt*pointerBlank: true
URxvt*pointerBlankDelay: 2


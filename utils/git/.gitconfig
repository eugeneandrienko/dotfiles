[user]
    name = h0rr0rrdrag0n
    email = h0rr0rrdrag@gmail.com
[push]
    default = simple
    # Make `git push` push relevant annotated tags when pushing
    # branches out.
    followTags = true
[alias]
    remotes = remote -v
    amend = commit --amend --reuse-message=HEAD
[color]
    ui = auto
[help]
    # Automatically correct and execute mistyped commands
    autocorrect = 1
[core]
    pager =
    autocrlf = input
    whitespace = trailing-space,space-before-tab
[merge]
    conflictstyle = diff3

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = black bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = green
    changed = red
    untracked = cyan


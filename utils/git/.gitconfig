[push]
    default = simple
    # Make `git push` push relevant annotated tags when pushing
    # branches out.
    followTags = true
[alias]
    remotes = remote -v
    amend = commit --amend --reuse-message=HEAD
[color]
    ui = auto
[help]
    # Automatically correct and execute mistyped commands
    autocorrect = 1
[core]
    pager =
    autocrlf = input
    whitespace = trailing-space,space-before-tab

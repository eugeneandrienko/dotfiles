function phonesync() {
    if [ ! -d ~/.termux ]; then
        rm -vf /tmp/phone-sync.tar*
        tar jcf /tmp/phone-sync.tar.bz2 -C ~/rsync filez/abook filez/pass filez/rss org
        echo "Copy /tmp/phone-sync.tar.bz2 to phone"
        read 'UNUSABLE?Press Enter to start mc: '
        mc /tmp
    else
        mv ~/storage/downloads/phone-sync.tar.bz2 ~/rsync/
        tar jxvf ~/rsync/phone-sync.tar.bz2 -C ~/rsync
        rm -vf ~/rsync/phone-sync.tar.bz2
    fi
}


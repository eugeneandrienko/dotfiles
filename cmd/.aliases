# Gentoo aliases
if [ -f ~/.gentoo ]; then
    alias emerge-update='doas emerge-webrsync; \
                         read NOTUSING?"Press Enter "; \
                         doas emerge --ask -uDU --keep-going --with-bdeps=y @world'
 fi

# youtube-dl aliases
alias ydl='youtube-dl --proxy socks5://127.0.0.1:8080'
alias ydl_podcast="youtube-dl --proxy socks5://127.0.0.1:8080 --continue \
                  --write-description --extract-audio --audio-format mp3 \
                  --embed-thumbnail --output '%(autonumber)s_%(title)s.%(ext)s'"
youtube() {
    mplayer -cookies -cookies-file /tmp/cookies.txt \
    $(youtube-dl -gf 22 \
        --cookies /tmp/cookies.txt "$1"); \
    rm -f /tmp/cookies.txt
}

